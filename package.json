{
  "name": "estacion",
  "version": "1.2.2",
  "description": "Event bus implementation made on top of native node events module",
  "main": "lib",
  "types": "lib",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run test",
    "test": "jest --verbose --coverage --no-cache",
    "test:watch": "jest --watch",
    "ci:test": "jest --runInBand --reporters=default --reporters=jest-junit --coverage --coverageDirectory=coverage",
    "format": "prettier --write \"{./src,./tests}/**/*\"",
    "fix:src": "eslint --fix \"./src/**/*.{js,jsx,ts,tsx}\"",
    "fix:tests": "eslint --fix \"./tests/**/*.{js,jsx,ts,tsx}\"",
    "fix": "npm-run-all -p fix:*",
    "docs": "del docs && typedoc --theme markdown --readme none --excludePrivate --excludeNotExported --out docs/api ./src",
    "clean": "del lib && del .buildcache",
    "build": "npm run clean && tsc",
    "build:watch": "npm run build &&  tsc --watch"
  },
  "engines": {
    "node:": ">=v8.16.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivandotv/estacion.git"
  },
  "author": "Ivan Vlatkovic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivandotv/estacion/issues"
  },
  "homepage": "https://github.com/ivandotv/estacion#readme",
  "peerDependencies": {
    "events": ">=3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "events": ">=3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^11.0.0",
    "jest-watch-typeahead": "^0.6.0",
    "lint-staged": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.0.0",
    "typedoc": "^0.19.0",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^4.0.0"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "events",
    "event",
    "eventemitter",
    "eventbus",
    "event",
    "bus",
    "bus"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "jest-junit": {
    "outputDirectory": "./reports/junit",
    "outputName": "js-test-results.xml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
